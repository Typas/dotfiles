\ProvidesPackage{secdepth}[\filedate\space\fileversion]

% options
\newcommand{\secnumberdepth}{0}
\DeclareOption{1}{\renewcommand{\secnumberdepth}{1}}
\DeclareOption{2}{\renewcommand{\secnumberdepth}{2}}
\DeclareOption{3}{\renewcommand{\secnumberdepth}{3}}
\DeclareOption{4}{\renewcommand{\secnumberdepth}{4}}
\DeclareOption{5}{\renewcommand{\secnumberdepth}{5}}
